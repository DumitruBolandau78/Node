<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Title</label>
        <span class="helper-text" data-error="Insert a title"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Insert a number"></span>
    </div>

    <div class="input-field">
        <input id="img" name="url" type="text" class="validate" required value="{{course.img}}">
        <label for="url">Image's URL</label>
        <span class="helper-text" data-error="Insert a url"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" value="{{course.id}}" name="id">
    <button type="submit" class="btn red">Delete</button>
</form>